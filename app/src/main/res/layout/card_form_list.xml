<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="3dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_form"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:id="@+id/fo"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="11dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/fo"
                android:layout_toRightOf="@+id/fo"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/txtFormName"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/ic_form_new"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/imageStatus"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="14dp" />

            <TextView
                android:text="v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtVersion"
                android:layout_below="@+id/txtFormName"
                android:layout_alignLeft="@+id/txtFormName"
                android:layout_alignStart="@+id/txtFormName" />

            <TextView
                android:text="12 jun 2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtFormDate"

                android:layout_alignBaseline="@+id/txtFormName"
                android:layout_alignBottom="@+id/txtFormName"
                android:layout_alignRight="@+id/imageStatus"
                android:layout_alignEnd="@+id/imageStatus" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field1"
                android:layout_above="@+id/imageStatus"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageStatus"
                android:layout_toStartOf="@+id/imageStatus" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/field1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/field2"
                android:layout_toLeftOf="@+id/imageStatus"
                android:layout_toStartOf="@+id/imageStatus" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field3"
                android:layout_below="@+id/field2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageStatus"
                android:layout_toStartOf="@+id/imageStatus" />

            <TextView
                android:text="Stage:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVersion"
                android:layout_alignLeft="@+id/txtVersion"
                android:layout_alignStart="@+id/txtVersion"
                android:id="@+id/textView9"
                android:textAppearance="@style/TextAppearance.AppCompat" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
